@model Vidly2.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul class="list-group">
    <li class="list-group-item d-flex justify-content-between align-items-center">
        <span class="badge badge-primary badge-pill">Genre</span> @Model.Genre.Name</li>
    <li class="list-group-item d-flex justify-content-between align-items-center">
        <span class="badge badge-primary badge-pill">Release Date</span> @Model.ReleaseDate.ToLongDateString()</li>
    <li class="list-group-item d-flex justify-content-between align-items-center">
        <span class="badge badge-primary badge-pill">Date Added</span> @Model.DateAdded.ToLongDateString()</li>
    <li class="list-group-item d-flex justify-content-between align-items-center">
        <span class="badge badge-primary badge-pill">In Stock</span>  @Model.NumberInStock</li>

</ul>


